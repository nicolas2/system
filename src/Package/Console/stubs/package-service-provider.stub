<?php

namespace {{path}}\{{namespace}}\Providers;

use Nova\Package\Support\Providers\PackageServiceProvider as ServiceProvider;


class PackageServiceProvider extends ServiceProvider
{
    /**
     * The additional provider class names.
     *
     * @var array
     */
    protected $providers = array(
        '{{path}}\{{namespace}}\Providers\AuthServiceProvider',
        '{{path}}\{{namespace}}\Providers\EventServiceProvider',
        '{{path}}\{{namespace}}\Providers\RouteServiceProvider',
    );


    /**
     * Bootstrap the Application Events.
     *
     * @return void
     */
    public function boot()
    {
        $path = realpath(__DIR__ .'/../');

        // Configure the Package.
        $this->package('packages/{{namespace}}', '{{slug}}', $path);

        // Bootstrap the Package.
        $path = $path .DS .'Bootstrap.php';

        $this->bootstrapFrom($path);
    }

    /**
     * Register the {{name}} package Service Provider.
     *
     * This service provider is a convenient place to register your packages
     * services in the IoC container. If you wish, you may make additional
     * methods or service providers to keep the code more focused and granular.
     *
     * @return void
     */
    public function register()
    {
        parent::register();

        //
    }

}
